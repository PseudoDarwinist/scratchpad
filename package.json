{
  "name": "stacks-ai",
  "version": "0.2.7",
  "description": "Stacks - AI-powered infinite canvas for notes, images, and creative organization",
  "author": "Jason Kneen",
  "license": "MIT",
  "type": "module",
  "main": "electron/main.cjs",
  "bin": {
    "stacks-ai": "bin/stacks.cjs"
  },
  "files": [
    "bin/",
    "dist/assets/",
    "dist/fonts/",
    "dist/index.html",
    "dist/mcp/*.js",
    "electron/",
    "assets/icon.icns",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run mcp:build",
    "build:prod": "npm run clean && NODE_ENV=production vite build && npm run mcp:build",
    "preview": "vite preview",
    "clean": "rm -rf dist node_modules/.vite",
    "electron": "electron .",
    "electron:dev": "NODE_ENV=development electron .",
    "prepublishOnly": "npm run build:prod",
    "mcp:dev": "tsx watch mcp/server.ts",
    "mcp:build": "tsc -p tsconfig.mcp.json",
    "mcp:start": "node dist/mcp/server.js",
    "mcp:proxy": "tsx mcp/proxy.ts",
    "mcp:proxy:start": "node dist/mcp/proxy.js",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.2",
    "@ai-sdk/google": "^3.0.2",
    "@ai-sdk/openai": "^3.0.2",
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/genai": "^1.34.0",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@paper-design/shaders-react": "^0.0.68",
    "@types/better-sqlite3": "^7.6.13",
    "ai": "^6.0.6",
    "better-sqlite3": "^12.5.0",
    "elkjs": "0.9.3",
    "lucide-react": "^0.562.0",
    "openai": "^6.15.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tsx": "^4.21.0",
    "ws": "^8.18.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^22.14.0",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.23",
    "electron": "^39.2.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "web-worker": "^1.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jasonkneen/stacks.git"
  },
  "keywords": [
    "stacks",
    "canvas",
    "notes",
    "ai",
    "workspace",
    "electron",
    "infinite-canvas"
  ]
}
